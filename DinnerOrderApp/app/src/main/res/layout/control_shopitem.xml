            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/rbRating"
                android:text="4.7"
                android:textColor="#ffaa0c"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tvMonthSales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tvRating"
                android:text="月售6532单"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tvDeliveryMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/txt_delivery_mode"
                android:padding="2dp"
                android:text="蜂鸟专送"
                android:textColor="@color/colorLight"
                android:textSize="10dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvDeliveryTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/tvDeliveryMode"
                android:background="@drawable/txt_delivery_time"
                android:padding="2dp"
                android:text="准时达"
                android:textColor="@color/colorPrimary"
                android:textSize="10dp"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvMinOrderAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥20起送"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:alpha="0.6"
                android:text="/" />

            <TextView
                android:id="@+id/tvDeliveryFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送费¥6"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tvCostDivide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:alpha="0.6"
                android:text="/" />

            <TextView
                android:id="@+id/tvAverageCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="¥12/人"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.16km"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:alpha="0.6"
                android:text="/" />

            <TextView
                android:id="@+id/tvOrderLeadTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23分钟"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp" />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/fragment_activities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></FrameLayout>
